<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".desc_paris">

    <TextView
        android:id="@+id/textView39"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:background="@drawable/paris"
        android:gravity="center"
        android:text="@string/paris"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="49dp" />

            <Button
                android:id="@+id/buttonparisbest"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/paristitle"
                android:text="@string/visitparis"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/txt" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <Button
                android:id="@+id/buttonparisfood"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:background="@drawable/parisfood"
                android:text="@string/foodparis"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/txt" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="53dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>